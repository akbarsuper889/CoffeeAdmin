@model IEnumerable<CoffeeAdmin.Models.Coffee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Kopi")
            </th>
            <th>
                @Html.DisplayName("Asal Kopi")
            </th>
            <th>
                @Html.DisplayName("Jenis Kopi")
            </th>
            <th>
                @Html.DisplayName("Deskripsi Kopi")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaKopi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AsalKopi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JenisKopi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskripsiKopi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
